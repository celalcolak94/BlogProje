@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

@model List<Message2>

<h1>Gelen Kutusu</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Konu</th>
            <th>Gönderen</th>
            <th>Tarih</th>
            <th>Mesajı Aç</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MessageId</td>
                <td>@item.Subject</td>
                <td>@item.SenderUser.WriterName</td>
                <td>@item.MessageDate.ToShortDateString()</td>
                <td>
                    <a asp-controller="Message" asp-action="MessageDetails" asp-route-id="@item.MessageId" class="btn btn-danger">Mesajı Aç</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Blog" asp-action="BlogAdd" class="btn btn-primary">
    Yeni Mesaj Oluştur
</a>