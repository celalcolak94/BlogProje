@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

@model WriterEditModel

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar Profil Bilgileri Düzenleme</h4>
            <br />
            @Html.ValidationSummary()
            <form asp-controller="Writer" asp-action="WriterEditProfile" method="post" class="forms-sample" enctype="multipart/form-data">
                <input asp-for="WriterId" type="hidden" />
                <div class="form-group">
                    <label for="name">Yazar Ad Soyad</label>
                    <input asp-for="WriterName" type="text" class="form-control" id="name" placeholder="Adınız Soyadınız...">
                </div>
                <div class="form-group">
                    <label for="mail">Mail Adresi</label>
                    <input asp-for="WriterMail" type="email" class="form-control" id="mail" placeholder="Mail adresiniz...">
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <label for="password">Şifre</label>
                        <input asp-for="WriterPassword" type="password" class="form-control" id="password" placeholder="Şifre...">
                    </div>
                    <div class="col-md-6">
                        <label for="password2">Şifre Tekrar</label>
                        <input asp-for="WriterRePassword" type="password" class="form-control" id="password2" placeholder="Şifre...">
                    </div>
                </div>
                <div class="form-group">
                    <label for="formFile" class="form-label">Yazar Görsel</label>
                    <input asp-for="WriterImage" id="formFile" type="file" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="about">Yazar Hakkında</label>
                    <textarea asp-for="WriterAbout" class="form-control" id="about" rows="4"></textarea>
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                <button class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>