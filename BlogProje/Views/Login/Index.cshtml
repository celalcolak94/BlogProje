@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

@model Writer

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Oturum Aç</h3>
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form asp-controller="Login" asp-action="Index" method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1 mb-2">Mail Adresi</label>
                        <input asp-for="WriterMail" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="" required="">
                        <span asp-validation-for="WriterMail"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1 mb-2">Şifre</label>
                        <input asp-for="WriterPassword" type="password" class="form-control" id="exampleInputPassword1" placeholder="" required="">
                        <span asp-validation-for="WriterPassword"></span>
                    </div>
                    <div class="form-check mb-2">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Beni hatırla</label>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Giriş Yap</button>
                    <p><a asp-controller="Register" asp-action="Index">Bir hesabın yok mu?</a></p>
                </form>
            </div>
        </div>
    </div>
</section>